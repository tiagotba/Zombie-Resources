@model WebAppZombieResources.ViewModels.SobreviventeViewModel
@{
    ViewBag.Title = "Entrar";
}
<h2>Entrar</h2>
<div class="panel panel-default">
    <div class="panel-heading">Preencha o seu hash e clique em entrar</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="hash" class="control-label col-md-5">Hash de segurança</label>
                    </div>
                    <div class="form-group">
                        <div class="form-control">
                            @Html.PasswordFor(model => model.HashSeguranca, new { htmlAttributes = new { @class = "form-control" } })
                            @*<input type="password" class="form-control" id="HashSeguranca" name="HashSeguranca" placeholder="Insira seu hash obtido no momento do cadastro"  />*@
                        </div>
                        <br />
                    </div>
                    <div class="navbar">
                        <div class="navbar-left">
                            <button type="submit" class="btn btn-default">Login</button>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>
