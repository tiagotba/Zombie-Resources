@model WebAppZombieResources.ViewModels.SobreviventeViewModel
@{
    ViewBag.Title = "Entrar";
}
<h2>Entrar</h2>
<div class="panel panel-default">
    
    <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-login">
            <div class="panel-heading"><strong> Preencha os dados de acesso e clique em Log in</strong></div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <form id="form" role="form" style="display: block;">
                                <div class="form-group">
                                    <label for="hash" class="control-label col-md-6">Login</label>
                                </div>
                                <br />
                                <div class="form-group">
                                    <div class="form-control">
                                        @Html.TextBoxFor(model => model.LoginName /*, new { htmlAttributes = new { @placeholder = "Hash de Seguranca", @class = "form-control" }*/ )
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="hash" class="control-label col-md-6">Hash de segurança</label>
                                </div>
                                <br />
                                <div class="form-group">
                                    <div class="form-control">
                                        @Html.PasswordFor(model => model.HashSeguranca, new { htmlAttributes = new { @placeholder = "Hash de Seguranca",@class= "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-10 col-sm-offset-1">
                                            <button type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In" >Log In</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <center>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")" class="btn btn-default">
                    <span class="glyphicon glyphicon-home"
                          aria-hidden="true"></span>Principal
                </a>
            </li>
        </ol>
    </center>
</div>

